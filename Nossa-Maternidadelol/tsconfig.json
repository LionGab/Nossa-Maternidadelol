{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./server/types"]
  },
  "include": ["**/*.ts", "server/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}

